<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:weightSum="3"
    android:orientation="vertical">
    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/layout_onboardingItem_imageView"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:padding="10dp"
        android:src="@drawable/newsly_logo_wt" />

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/layout_onboardingItem_textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:text="Welcome!"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/layout_onboardingItem_textView_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:text="This is an onboarding screen."
        android:textSize="16sp" />

</LinearLayout>